{
    "manifest_version": 3,
    "name": "Translate Me",
    "description": "A full translate pane when you highlight text",
    "version": "0.1",
    "action": {
      "default_popup": "popup/popup.html",
      "default_icon": "images/16x16.png"
    },
    "icons": {
        "16": "images/16x16.png",
        "32": "images/32x32.png",
        "48": "images/48x48.png",
        "128": "images/128x128.png"
    },
    "content_scripts": [
    {
        "js": ["scripts/content.js"],
        "matches": [
            "https://developer.chrome.com/docs/extensions/*",
            "https://developer.chrome.com/docs/webstore/*"
        ]
    }
    ]
  } 